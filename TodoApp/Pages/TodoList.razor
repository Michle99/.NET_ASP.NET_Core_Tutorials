
@page "/todo"

<h3>TODO List</h3>

@if (todoItems == null)
{
    <p>Loading...</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Completed</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TodoService.GetTodoItems())
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@(item.IsCompleted ? "Yes" : "No")</td>
                    <td>
                        <button class="btn btn-primary" @onclick="() => EditTodoItem(item)">Edit</button>
                        <button class="btn btn-danger" @onclick="() => DeleteTodoItem(item.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<button class="button" @onclick="AddTodoItem">Add New Item</button>

@code {
    private List<Models.TodoItem> todoItems = null!;

    @inject NavigationManager navigationManager

    [Inject]
    private Service.TodoService TodoService { get; set; } = null!;

    protected override void OnInitialized()
    {
        todoItems = TodoService.GetTodoItems();
    }
    private void AddTodoItem()
    {
        navigationManager.NavigateTo("/todo/add");
    }

    private void EditTodoItem(Models.TodoItem item)
    {
        navigationManager.NavigateTo($"/todo/{item.Id}");
    }

    private void DeleteTodoItem(int id)
    {
        TodoService.DeleteTodoItem(id);
        todoItems = TodoService.GetTodoItems();
    }
}
